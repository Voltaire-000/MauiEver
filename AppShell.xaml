<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiEver.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiEver"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiEver">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage">
    </ShellContent>
    <ShellContent 
        Title="Animals" 
        ContentTemplate="{DataTemplate local:DogPage}" 
        Route="DogPage">
    </ShellContent>
    <ShellContent
        Title="Thermo Properties"
        ContentTemplate="{DataTemplate local:JsonView}"
        Route="JsonView">
    </ShellContent>
    <ShellContent
        Title="People"
        ContentTemplate="{DataTemplate local:People}"
        Route="People">
    </ShellContent>

</Shell>
